@model BlogWebApp.Models.AppUser

<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-4 mb-4">Are you sure you want to delete this user?</h1>
    </div>
    <div class="text-center">
    <form method="post" asp-controller="User" asp-action="DeleteConfirmed">
            <input type="hidden" asp-for="Id" name="userId" />

        <div class="form-group">
            <input type="submit" value="Confirm" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
            @Html.AntiForgeryToken()
    </form>
    </div>
</div>
